<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_activity"
    android:gravity="top"
    android:orientation="vertical">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/english"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ĐĂNG KÝ"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#C16B8A"
        android:layout_marginBottom="40dp"
        />
    <EditText
        android:id="@+id/ettUsernameregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Tên Học sinh"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:paddingRight="18dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:ems="20"/>

    <EditText
        android:id="@+id/etpPasswordregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="20"
        android:hint="Mật khẩu"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:paddingRight="18dp"
        android:paddingBottom="10dp"
        android:inputType="textPassword"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/etpPasswordregisteragain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:ems="20"
        android:hint="Nhập lại mật khẩu"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:paddingRight="18dp"
        android:paddingBottom="10dp"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btndangky"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="ĐĂNG KÝ"
        android:textSize="20dp"
        android:textColorHint="@color/white"
        android:background="#C16B8A"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnquaylaidangky"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:hint="QUAY LẠI"
        android:textColorHint="#C16B8A"
        android:textSize="20dp" />

</LinearLayout>